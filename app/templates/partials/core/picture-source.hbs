  <source {{#if media}}media="({{media}})" {{/if}}
          data-srcset="../assets/images/{{img}}.webp{{#if no-2x}}{{else}}, ../assets/images/{{img}}@2x.webp 2x{{/if}}"
          type="image/webp">
{{/ifUseWebp}}
<source {{#if media}}media="({{media}})" {{/if}}
        data-srcset="../assets/images/{{img}}.{{ext}}{{#if no-2x}}{{else}}, ../assets/images/{{img}}@2x.{{ext}} 2x{{/if}}"
  {{#ifCond ext 'jpg'}} type="image/jpeg"{{else}} type="image/png"{{/ifCond}}>
