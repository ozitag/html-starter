{{!UI Kit}}

{{> core/ui-kit/layout/head}}

<main class="uikit">
  <aside class="uikit-aside js-drawer">
    <div class="js-drawer-container">
      <div class="uikit-aside__heading">
        {{>ui-kit/core/logo }}
      </div>
      <nav class="uikit-aside__content">
        <ul class="uikit-aside__nav js-uikit-autogenerator-append"></ul>
      </nav>
    </div>
  </aside>
  <section class="uikit-main">
    <header class="uikit-header js-uikit-header">
      <button class="uikit-btn js-drawer-toggle" type="button">
        <div class="js-drawer-burger"><span></span></div>
      </button>
      {{>ui-kit/core/title }}
    </header>
    <div class="uikit-content-container">
      <div class="uikit-content js-uikit-autogenerator">
        {{#> core/ui-kit/blocks/section-colors}}
          {{> ui-kit/colors}}
        {{/core/ui-kit/blocks/section-colors}}

        {{#> core/ui-kit/blocks/section title="Buttons" id="buttons"}}
          {{> ui-kit/buttons }}
        {{/core/ui-kit/blocks/section}}

        {{#> core/ui-kit/blocks/section title="Form Elements" id="forms"}}
          {{> ui-kit/forms }}
        {{/core/ui-kit/blocks/section}}

        {{#> core/ui-kit/blocks/section title="Widgets" id="widgets"}}
          {{> ui-kit/widgets }}
        {{/core/ui-kit/blocks/section}}

        {{#> core/ui-kit/blocks/section title="Features" id="features"}}
          {{> ui-kit/features }}
        {{/core/ui-kit/blocks/section}}
      </div>
    </div>
    {{> ui-kit/core/footer}}
  </section>
</main>

